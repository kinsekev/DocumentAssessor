<%- include('../partials/header') %>

<div class="container">
    <div class="card">
        <div class="card-header">
            <h5><%= assessment.title %></h5>
        </div>
        <div class="card-body">
            <div>
                <p class="card-text"><b>Description: </b><%= assessment.description %></p>
            </div>
            <div>
                <p class="card-text"><b>Instructions: </b><%= assessment.instructions %></p>
            </div>
            <div>
                <p class="card-text"><b>Number of Assessments per User: </b><%= assessment.numAssessmentsPerUser %></p>
            </div>
            <% if(!assessment.started) { %>
                <div id="button-div">
                    <form class="delete-form" action="/assessments/<%= assessment._id %>?_method=DELETE" method="POST">
                        <input class="btn btn-danger float-right" type="submit" value="Delete Assessment">
                    </form>
                    <a class="btn btn-warning float-right" href="/assessments/<%= assessment._id %>/edit">Edit Assessment</a>
                    <a class="btn btn-primary" href="/assessments/<%= assessment._id %>/resources/new">Add New Resource</a>
                </div>
            <% } %>
        </div>
    </div>
    <% assessment.resources.forEach(function(resource, i) { %>
        <div class="container">
            <div class="card">
                <div class="card-header">
                    <% if(resource.user.username) { %>
                        Resource: <%= i + 1 %>
                        <span class="float-right">User Assigned: <%= resource.user.username %></span> 
                    <% } else { %>
                        Resource: <%= i + 1 %>
                        <span class="float-right">User Assigned: No user assigned</span> 
                    <% } %>
                </div>  
                <% if(resource.started) { %>
                    <% resource.forms.forEach(function(form) { %>
                        <% if(form.rating) { %>
                            <div class="container">
                                <div class="card p-3 bg-light col-md-10 mx-auto">
                                    <p class="card-text">Link: <%= form.link %></p>
                                    <div class="card-text">
                                        Rating: <%= form.rating %>
                                    </div>
                                    <div class="card-text">
                                        Text Answer: <%= form.text %>
                                    </div>
                                    <div id="button-div">
                                        <form class="delete-form" action="/assessments/<%= assessment._id %>/resources/<%= resource._id %>/forms/<%= form._id %>?_method=DELETE" method="POST">
                                            <input class="btn btn-danger float-right" type="submit" value="Restart Form">
                                        </form>
                                        <a class="btn btn-warning float-right" href="/assessments/<%= assessment._id %>/resources/<%= resource._id %>/forms/<%= form._id %>/edit">Edit Form</a>
                                    </div>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="container">
                                <div class="card p-3 bg-light col-md-10 mx-auto">
                                    <p class="card-text">Link: <%= form.link %></p>
                                    <form action="/assessments/<%= assessment._id %>/resources/<%= resource._id %>/forms/<%= form._id %>?_method=PUT" method="POST">
                                        <div class="form-group">
                                            <label for="ratingText">Textrea: </label>
                                            <textarea class="form-control" id="ratingText" name="ratingText" id="ratingText" cols="75" rows="2"></textarea>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-sm-3 sm-3">
                                                <label for="rating">Rating: </label>
                                                <select class="form-control" name="rating" id="rating">
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                    <option value="5">5</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="text-right">
                                            <button class="btn btn-primary" type="submit">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                <% } else { %>
                    <div class="container">
                        <div class="card p-3 bg-light col-md-10 mx-auto">
                            <% resource.links.forEach(function(link) { %>                            
                                <p class="card-text"><%= link %></p>
                            <% }); %>
                            <div class="button-div">
                                <% if(resource.user.username) { %>
                                    <form action="/assessments/<%= assessment._id %>/resources/<%= resource._id %>/forms" method="POST">
                                        <input class="btn btn-primary" type="submit" value="Start Resource">
                                    </form>
                                <% } %>
                                <% if(!resource.started) { %>
                                    <form action="/assessments/<%= assessment._id %>/resources/<%= resource._id %>?_method=DELETE" method="POST">
                                        <input class="btn btn-danger float-right" type="submit" value="Delete Resource">
                                    </form>
                                    <a class="btn btn-warning float-right" href="/assessments/<%= assessment._id %>/resources/<%= resource._id %>/edit">Edit Resource</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    <% }) %>
</div>

