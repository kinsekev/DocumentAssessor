<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="col-md-12">
                <form class="form card p-3 bg-light" action="/assessments/<%= assessment._id %>/resources/<%= resource._id %>?_method=PUT" 
                      method="POST" enctype="multipart/form-data">
                    <h3 class="text-center text-black">Edit Resource</h3>
                    <div class="form-group">
                        <label for="uploadFile">Upload File:</label><br>
                        <input id="uploadFile" type="file" name="file" accept=".txt" value="uploadFile"/>
                    </div>
                    <div class="form-group">
                        <% resource.links.forEach(function(link, index) { %>
                            <div>
                                <label style=" border-radius: 0.25em" class="form-group" for="link<%= index %>">Delete the link below?   Yes    
                                    <input type="checkbox" name="deleteLinks[]" id="link<%= index %>" value="<%= link %>">
                                    <li><%= link %></li>
                                </label>
                            </div>
                        <% }); %>
                    </div>
                    <div class="form-group">
                        <label for="user">Choose user:</label>
                        <select id="user" class="form-control" name="user">
                            <option value="">Assign No Users</option>
                            <% users.forEach(function(user) { %>
                                <% if(resource.user.username && user.username === resource.user.username) { %>
                                    <option value="<%= user.username %>" selected><%= user.username %></option>
                                <% } else { %>
                                    <option value="<%= user.username %>"><%= user.username %></option>
                                <% } %>
                            <% }); %>
                        </select>
                    </div>
                    <div class="form-group text-center">
                        <input type="submit" name="updateResource" class="btn btn-primary btn-md" value="Update Resource"> 
                    </div> 
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>