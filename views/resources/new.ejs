<%- include('../partials/header') %>

<h1>This is the resource new page!</h1>

<form action="/assessments/<%= assessment._id %>/resources" method="POST" enctype="multipart/form-data">
    <div>
        <input type="text" name="resource[instructions]" value="<%= assessment.instructions %>" disabled>
    </div>
    <div>
        <input type="text" name="resource[numAssessmentsPerUser]" value="<%= assessment.numAssessmentsPerUser %>" disabled>
    </div>
    <div>
        <input type="file" name="file" accept=".txt" value="uploadFile"/>
    </div>
    <div>
        <label for="user">Choose users:</label>
        <select name="user" id="user" size="5" multiple>
            <option value="">Assign No Users</option>
            <% users.forEach(function(user) { %>
                <option value="<%= user.username %>"><%= user.username %></option>
            <% }); %>
        </select>
    </div>
    <div>
        <button>Create Resource</button>
    </div>
</form>

<%- include('../partials/footer') %>